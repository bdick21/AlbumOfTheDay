extends layout

block content
  .jumbotron
    .container
      h1 Albums of the Day
      table.table.table-striped(style='border-collapse:collapse;')
        tbody
          each album, i in albumlist
            tr.accordion-toggle(data-toggle='collapse', data-target='#demo#{i}')
              td
                img(src=album.cover_art, alt=album.Title, style='width:250px;height:250px;')
              td
               h3= album.Title
               p
               h4= album.Artist
               p
               button.btn.btn-default.btn-xs
                 span.glyphicon.glyphicon-eye-open
              td= album.Genre
            tr
              td.hiddenRow(colspan='12')
                .accordian-body.collapse(id='demo#{i}')
                  table.table.table-striped
                    thead
                      tr
                        th(style='width:100px') Date
                        th(style='width:150px') Recommended By
                        th Top Tracks
                    tbody
                      tr
                        td= album.DateRecommended
                        td= album.RecommendedBy
                        td= album.TopTracks
                    if (album.Amazon !== undefined)
                      thead
                        tr
                          th Comments
                      tbody
                        each comment in album.Amazon
                          tr
                            td(colspan='3')= comment
                        
